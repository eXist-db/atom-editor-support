{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Server-side API for eXist-db VSCode extension",
    "description": "Server-side API for the Visual Studio Code Extension for eXist-db"
  },
  "servers": [
    {
      "description": "Endpoint for testing on localhost",
      "url": "http://localhost:8080/exist/apps/atom-editor"
    }
  ],
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      },
      "cookieAuth": {
        "type": "apiKey",
        "name": "teipublisher.com.login",
        "in": "cookie"
      }
    }
  },
  "paths": {
    "/api/{path}": {
      "delete": {
        "summary": "Delete a file or collection",
        "operationId": "api:delete",
        "parameters": [
          {
            "name": "path",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204":{
            "description": "File successfully deleted"
          }
        }
      }
    },
    "/api/collections/{collection}": {
      "get": {
        "summary": "List collection contents",
        "operationId": "api:collection",
        "parameters": [
          {
            "name": "collection",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Collection listing",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Create collection",
        "operationId": "api:create-collection",
        "parameters": [
          {
            "name": "collection",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Collection created"
          }
        }
      }
    },
    "/api/files/{path}": {
      "post": {
        "summary": "Store a file",
        "operationId": "api:store-file",
        "parameters": [
          {
            "name": "path",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/octet-stream": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "File saved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Read a file",
        "operationId": "api:read-file",
        "parameters": [
          {
            "name": "path",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "File contents",
            "content": {
              "application/xml": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/stat/{path}": {
      "get": {
        "summary": "Get stats on file or collection",
        "operationId": "api:stat",
        "parameters": [
          {
            "name": "path",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "File contents",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  },
  "security": [
    {
      "cookieAuth": []
    },
    {
      "basicAuth": []
    }
  ]
}
